<UserControl x:Class="SEDiscordBridge.SEDBControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SEDiscordBridge"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SEDBConfig/>
    </UserControl.DataContext>
    <StackPanel>
        <Label Content="----------------- Main Config ---------------" HorizontalAlignment="Center"/>
        <Label Content="Discord Bot Token"/>
        <TextBox Text="{Binding BotToken}" ToolTip="You need to create a discord bot to get the token" Margin="3" />
        <Label Content="Channel id for chat messages"/>
        <TextBox Text="{Binding ChannelId}" ToolTip="Channel ID to send/receive messages from/to in-game/discord" Margin="3" />
        <Label Content="Chat Format In-Game -> Discord"/>
        <TextBox Text="{Binding Format}" ToolTip="Format for message from in-game -> discord. You can use {p} and {msg}" Margin="3" />
        <Label Content="Chat Format Discord -> In-Game"/>
        <TextBox Text="{Binding Format2}" ToolTip="Format for message from discord -> in-game. You can use {p} (we cent format message for in-game)" Margin="3" />
        <CheckBox Content="Chat messages as Server" Margin="3" IsChecked="{Binding AsServer}" ToolTip="Messages from discord will be as server or with discord user name? May conflict if the username is the sames as the player online"/>
        <Label Content="Server Name"/>
        <TextBox Text="{Binding ServerName}" ToolTip="The server name to show for discord messages, if message as server enabled" Margin="3" />
        <Label Content="Channel id for commands"/>
        <TextBox Text="{Binding CommandChannelId}" ToolTip="Discord channel to send commands to Torch" Margin="3" />
        <Label Content="Commands Prefix"/>
        <TextBox Text="{Binding CommandPrefix}" ToolTip="Prefix for Commands from Discord" Margin="3" />
        <Label Content="----------------- Messages ---------------" HorizontalAlignment="Center"/>
        <Label Content="Started Message"/>
        <TextBox Text="{Binding Started}" ToolTip="Message to show on server started" Margin="3" />
        <Label Content="Stoped Message"/>
        <TextBox Text="{Binding Stopped}" ToolTip="Message to show on server stop" Margin="3" />
        <Label Content="Player Join Message" />
        <TextBox Text="{Binding Join}" Margin="3" ToolTip="Use {p} for player name. Leave empty to disable"/>
        <Label Content="Player Leave Message" />
        <TextBox Text="{Binding Leave}" Margin="3" ToolTip="Use {p} for player name. Leave empty to disable"/>        
        <CheckBox Content="Enable BOT Status" Margin="3" IsChecked="{Binding UseStatus}" />        
        <Label Content="Bot Status Message"/>
        <TextBox Text="{Binding Status}" ToolTip="Text to show on BOT status. You can use {ss} to show server sim speed or {p} to show players online" Margin="3" />        
        <Label Content="----------------- Save Config ---------------" HorizontalAlignment="Center" Margin="3" />
        <Button Content="Save Config" Click="SaveConfig_OnClick" Margin="3" />        
    </StackPanel>
</UserControl>
